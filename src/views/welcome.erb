<!doctype html>
<html>
  <head>
  	<link rel="stylesheet"type="text/css" href="/css/reset.css">
		<style>
			html, body {font-family: sans-serif; background-color: black; color: #333; background: url('/img/cinema.jpg') no-repeat center center fixed; background-size: cover}
			h1 {font-family: "Lucida Calligraphy", "Gabriola", "Curlz MT"; font-size: 60px; color: white; text-shadow: 0 2px 10px black; text-align: center; margin-top: 100px}
			.shorturl {
				padding: 0;
				border-radius: 5px;
				border: 1px solid rgba(128, 128, 128, 0.3);
				width: 788px;
				background: black;
				background: rgba(0,0,0,0.2);
				margin: 0 auto 20px auto;
			}
			.shorturl h2 {
				font-family: "Rockwell", "Palatino", serif;
				font-size: 3em;
				color: white;
				padding: 0px;
				width: 100%;
				text-align: center;
				margin: 10px auto 10px auto;
			}
			.qrcode {
				padding: 100px;
				background: #fff;
				border-radius: 5px;
				border: 1px solid rgba(128, 128, 128, 0.3);
				width: 588px;
				background: white;
				margin: 0 auto 50px auto;
			}

		     /* QRCode */
		      .qrcode table {
		        border-width: 0;
		        border-style: none;
		        border-color: #0000ff;
		        border-collapse: collapse;
		        background: white;
				margin: auto;
		      }
		      .qrcode td {
		        border-width: 0; 
		        border-style: none;
		        border-color: #0000ff; 
		        border-collapse: collapse; 
		        padding: 0; 
		        margin: 0; 
		        width: 10px; 
		        height: 10px; 
		      }
		      td.black { background-color: #000; }
		      td.white { background-color: #fff; }
		</style>
</head>
  <body>
    <div id="title"><h1>Welcome to <%= @user %>'s show!</h1></div>

	<div class="qrcode" >
		<table>
			<% @qr.modules.each_index do |x| %>
			<tr>  
			<% @qr.modules.each_index do |y| %>
			<% if @qr.dark?(x,y) %>
			 <td class="black"/>
			<% else %>
			 <td class="white"/>
			<% end %>
			<% end %>
			</tr>
			<% end %>
		</table>
	</div>

	<div class="shorturl">
		<h2>http://sldn.me/4444</h2>
	</div>
  </body>
</html>
